            @Html.EditorFor(model => model.OdaFiyat, new { htmlAttributes = new { @class = "form-control" } })  @*text boxlar*@
            @Html.ValidationMessageFor(model => model.OdaFiyat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="=form group">
        @Html.LabelFor(model => model.YatakSayisi, htmlAttributes: new { @class = "control-label col-md-2" })
