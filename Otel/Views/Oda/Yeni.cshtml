@model Otel.Models.Odalar
@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Oda Ekle</h2>

@using (Html.BeginForm()) //crud işlemlerinde begin form kullanmak zorundayız ve antifogerytoken
{
    @Html.AntiForgeryToken() //her form için id oluşturuyor!!

<div class="form-horizontal">
    
