@model Otel.Models.User

@{
    ViewBag.Title = "Logi n";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h2>Giriş</h2>
@{ @*Bu c# kodunu biz yazdık*@
try
{
    if (TempData["msg"] != null)
    {
        <script>swal("E-Şirket", "Kullanıcı adı veya Şifre Hatalı!!!", "error");</script>
        @*swall -> e ticaret yazısını getiriyor - Error imgeyi veriyor*@
    }
}
catch
{


}
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()      


<div class="form-horizontal">
    <h4>Kullanıcı</h4>
    <hr />

    <div class="card-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-floating mb-3">
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control input-md", 
           
           @placeholder = "Username", @type = "text", @id = "inputUsername" } })
            <label for="inputUsername">Username</label>
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>




        <div class="form-floating mb-3">
            @Html.EditorFor(model => model.Password1, new
            {
                htmlAttributes = new
                {
                    @class = "form-control input-md",
                    @placeholder = "Password",
                    @type = "password",
           @id = "inputPassword"
                }
            })
            <label for="inputPassword">Password</label>
            @Html.ValidationMessageFor(model => model.Password1, "", new { @class = "text-danger" })
        </div>

        <div class="form-floating mb-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Giriş" class="btn btn-default" />
            </div>
        </div>


        <div class="card-footer text-center py-3">
            <a class="btn btn-primary" href="@Url.Action("Yeni","Register")">Kayıt Ol!</a>

        </div>


    </div>
   
</div>
}

